<%- include('../partials/_head') -%>

<div class="card border-primary mb-3" id='register-card' style="max-width: 500px;">
  <div class="card-body">
    <h1>
      EPIC Manager || 
      <small class='text-muted'>Register</small>
    </h1>
    <form action="">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Enter your name">
          </div>
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" placeholder="Enter an email">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Enter a password">
          </div>
          <div class="form-group">
            <label for="password2">Repeat password</label>
            <input type="password" class="form-control" id="password2" placeholder="Retype your password">
          </div>
          <fieldset class="form-group">
            <legend>Account type</legend>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="accountType" id="accountTypeManager" value="true">
                Manager
              </label>
            </div>
            <div class="form-check">
            <label class="form-check-label">
                <input type="radio" class="form-check-input" name="accountType" id="accountTypeSales" value="false">
                Sales consultant
              </label>
            </div>
          <button type="submit" class="btn btn-primary btn-block" style='margin-top: 35px; margin-bottom: 20px;'>Register</button>
          <div style='text-align: center;'><small><a href="/users/login" class='text-secondary text-center'>Already have an account?</a></small></div>
    </form>
  </div>
</div>