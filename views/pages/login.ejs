<%- include('../partials/_head') -%>

<div class="card border-primary mb-3" id='login-card' style="max-width: 500px;">
  <div class="card-body">
    <h1>
      EPIC Manager || 
      <small class='text-muted'>Login</small>
    </h1>
    <form action='login' method='POST'>
        <div class="form-group">
            <label for="email">Email address</label>
            <input name='email' type="email" class="form-control" id="email" placeholder="Enter an email">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input name='password' type="password" class="form-control" id="password" placeholder="Enter a password">
          </div>
          <button type="submit" class="btn btn-primary btn-block" style='margin-top: 35px;'>Login</button>
          <button type="submit" class="btn btn-secondary btn-block"> <a href="/users/register">Register</a></button>
    </form>
  </div>
</div>

<div id="msg-container">
  <%- include('../partials/_messages') -%>
</div>