<%- include('../partials/_head') -%>
<%- include('../partials/_nav') -%>

<div id="add-message-container">
    <h2>Add a new message</h2>
    <form action="/message-board" method="POST">
          <input name='author' type="hidden" id="author-input" value="<%= name %>">
          <input name='isManager' type="hidden" id="isManager-input" value="<%= isManager %>">
          <div class="form-group">
            <label for="title-input">Title</label>
            <input name="title" type="text" class="form-control" id="title-input" placeholder="Enter your message title">
          </div>
          <div class="form-group">
            <label for="message-text-area">What's your message?</label>
            <textarea name="content" class="form-control" id="message-text-area" rows="5"></textarea>
          </div>
          <div id="submit-buttons">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a role='button' class='btn btn-danger' href="/message-board">Cancel</a>
          </div>
    </form>
</div>